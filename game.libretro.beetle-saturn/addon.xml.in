<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.beetle-saturn"
		name="Sega - Saturn (Beetle Saturn)"
		version="1.22.2.22"
		provider-name="Mednafen Team">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>cue|ccd|chd|toc|m3u</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Sega - Saturn (Beetle Saturn) v1.22.2</summary>
		<description lang="en_GB">Beetle Saturn is a port of Mednafen Saturn to the libretro API.

Supported files: .cue, .ccd, .chd, .toc, .m3u</description>
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.beetle-saturn</source>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
	</extension>
</addon>
